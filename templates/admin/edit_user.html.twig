{% extends 'base.html.twig' %}
{% block container %}
    <div class="row">
        <div class="col s12">
        </div>
    </div>
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card-panel grey lighten-5 z-depth-1">
                <div class="row valign-wrapper">
                    <div class="col s2">
                        <img src="{{ asset('avatar/'~user.avatar.link) }}" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
                    </div>
                    <div class="col s10">
                        <h3>{{ user.username }}</h3>
                      <span class="black-text">
                          {{ user.firstName }}<br/>
                          {{ user.lastName }}
                      </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 edit">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <span  class="helper-text data-error">
                {{ form_errors(form) }}
            </span>
            <button type="submit" class="waves-effect waves-light btn">
                <i class="material-icons right">check</i>Valider
            </button>
            <a href="{{ url('admin_zone') }}" class="waves-effect waves-light btn">Retour</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}