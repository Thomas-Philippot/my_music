{% extends 'base.html.twig' %}
{% block container %}

    <div class="row">
        <div class="col s12">
            <h1>Connexion</h1>
            <form method="post">
                <div class="input-field">
                    <label for="email">Pseudo</label>
                    <input type="text" id="email" name="_username" class="form-control">
                </div>
                <div class="input-field">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" class="form-control">
                </div>
                <button type="submit" class="btn btn-success mt-3" >Connexion</button>
            </form>
        </div>
        <div class="row">
            <div class="col s6 offset-l3">
                <img class="responsive-img" src="{{ asset('assets/img/login.svg') }}" alt="login">
            </div>
        </div>
    </div>
{% endblock %}

